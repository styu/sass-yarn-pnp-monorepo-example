{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^assemble",
        "build-transpile",
        "build-typecheck",
        "build-postcss"
      ]
    },
    "build-transpile": {
      "outputs": ["build/typescript/main/**"],
      "dependsOn": ["^build-transpile"]
    },
    "build-typecheck": {
      "outputs": ["build/typescript/types/**"],
      "dependsOn": ["^build-typecheck", "build-postcss"]
    },
    "build-postcss": {
      "outputs": ["build/css/**"],
      "dependsOn": ["^build-postcss"]
    },
    "assemble": {
      "dependsOn": [
        "assemble-prepare",
        "assemble-postcss-main",
        "assemble-postcss-types",
        "assemble-typescript-main",
        "assemble-typescript-types"
      ]
    },
    "assemble-postcss-main": {
      "dependsOn": ["assemble-prepare", "build-postcss"]
    },
    "assemble-postcss-types": {
      "dependsOn": ["assemble-prepare", "build-postcss"]
    },
    "assemble-typescript-main": {
      "dependsOn": ["assemble-prepare", "build-transpile"]
    },
    "assemble-typescript-types": {
      "dependsOn": ["assemble-prepare", "build-typecheck"]
    },
    "assemble-prepare": {},
    "lint": {},
    "lint-fix": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
