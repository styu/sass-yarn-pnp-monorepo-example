{
  "name": "pnp-sass-importer",
  "main": "./dist/main/importer.js",
  "types": "./dist/types/importer.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/importer.d.ts",
      "default": "./dist/main/importer.js"
    },
    "./legacy": {
      "types": "./dist/types/legacyImporter.d.ts",
      "default": "./dist/main/legacyImporter.js"
    }
  },
  "scripts": {
    "assemble": "echo 'Done'",
    "assemble-prepare": "mkdir -p dist/main && mkdir -p dist/types",
    "assemble-typescript-main": "cp build/typescript/main/**/*.js* dist/main",
    "assemble-typescript-types": "cp build/typescript/types/**/*.d.ts* dist/types",
    "build": "echo 'Done'",
    "build-transpile": "swc ./src --config-file .swcrc --out-dir build/typescript/main --strip-leading-paths",
    "build-typecheck": "tsc -p tsconfig.json",
    "lint": "prettier --check 'src/**/*.{ts,scss}*'",
    "lint-fix": "prettier --write 'src/**/*.{ts,scss}*'",
    "clean": "rm -rf dist && rm -rf build"
  },
  "dependencies": {
    "@yarnpkg/fslib": "~3.1.0",
    "@yarnpkg/libzip": "~3.1.0",
    "sass": "~1.77.8"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.5",
    "@types/node": "^20.14.11",
    "@types/pnpapi": "^0.0.5",
    "prettier": "^3.3.3",
    "typescript": "~5.5.3"
  }
}
